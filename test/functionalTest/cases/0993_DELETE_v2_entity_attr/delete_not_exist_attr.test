# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
DELETE Entity Attribute v2 not exist attribute

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. POST /v2/entities
# 02. GET /v2/entities/E1
# 03. DELETE /v2/entities/E1/attrs/none
# 04. GET /v2/entities/E1
#

echo "01. POST /v2/entities"
echo "====================="
payload='{
  "id": "E1",
  "type": "T1",
  "compattr": {
    "string":  "1",
    "number":  2,
    "bool":    true
  }
}'
orionCurl --url '/v2/entities?options=keyValues' --payload "$payload" --json
echo
echo


echo "02. GET /v2/entities/E1"
echo "======================="
orionCurl --url /v2/entities/E1 --json
echo
echo


echo "03. DELETE /v2/entities/E1/attrs/none"
echo "====================================="
orionCurl --url /v2/entities/E1/attrs/none -X DELETE --json
echo
echo


--REGEXPECT--
01. POST /v2/entities
=====================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E1?type=T1
Date: REGEX(.*)



02. GET /v2/entities/E1
=======================
HTTP/1.1 200 OK
Content-Length: 110
Content-Type: application/json
Date: REGEX(.*)

{
    "compattr": {
        "metadata": {},
        "type": "none",
        "value": {
            "bool": true,
            "number": 2,
            "string": "1"
        }
    },
    "id": "E1",
    "type": "T1"
}


03. DELETE /v2/entities/E1/attrs/none
=====================================
HTTP/1.1 404 Not Found
Content-Length: 56
Content-Type: application/json
Date: REGEX(.*)

{
    "description": "Attribute not found",
    "error": "NotFound"
}


--TEARDOWN--
brokerStop CB
dbDrop CB

