# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Date subscription filter (greater or equal than)

--SHELL-INIT--
dbInit CB
brokerStart CB
accumulatorStart

--SHELL--

#
# 01. Create subscription with q: birthday>=2016-02-24T10:00:00.00Z
# 02. Create entity with birthdaty: 2016-02-23T10:00:00.00Z (not notif)
# 03. Update entity to birthdaty: 2016-02-24T10:00:00.00Z (notif)
# 04. Update entity to birthdaty: 2016-02-25T10:00:00.00Z (notif)
# 05. Dump accumulator (2 notifications)
#

echo "01. Create subscription with q: birthday>=2016-02-24T10:00:00.00Z"
echo "================================================================="
payload='
{
    "subject": {
        "entities": [
            {
                "id": "E1",
                "type": "T"
            }
        ],
        "condition": {
            "attributes": [ ],
            "expression": {
               "q": "birthday>=2016-02-24T10:00:00.00Z"
            }
         }
    },
    "notification": {
        "callback": "http://localhost:'$LISTENER_PORT'/notify",
        "attributes": [ ]
    },
    "expires": "2050-04-05T14:00:00.00Z"
}
'
orionCurl --url /v2/subscriptions --payload "$payload" --json
echo
echo


echo "02. Create entity with birthdaty: 2016-02-23T10:00:00.00Z (not notif)"
echo "====================================================================="
payload='{
  "id": "E1",
  "type": "T",
  "birthday": {
    "value": "2016-02-23T10:00:00.00Z",
    "type": "date"
  }
}'
orionCurl --url /v2/entities --payload "$payload" --json
echo
echo


echo "03. Update entity to birthdaty: 2016-02-24T10:00:00.00Z (notif)"
echo "==============================================================="
payload='{
 "birthday": {
   "value": "2016-02-24T10:00:00.00Z",
   "type": "date"
  }
}'
orionCurl --url /v2/entities/E1 --payload "$payload" --json -X PATCH
echo
echo


echo "04. Update entity to birthdaty: 2016-02-25T10:00:00.00Z (notif)"
echo "==============================================================="
payload='{
 "birthday": {
   "value": "2016-02-25T10:00:00.00Z",
   "type": "date"
  }
}'
orionCurl --url /v2/entities/E1 --payload "$payload" --json -X PATCH
echo
echo


echo "05. Get accumulator dump (2 notifications)"
echo "=========================================="
accumulatorDump
echo
echo


--REGEXPECT--
01. Create subscription with q: birthday>=2016-02-24T10:00:00.00Z
=================================================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/subscriptions/REGEX([0-9a-f]{24})
Date: REGEX(.*)



02. Create entity with birthdaty: 2016-02-23T10:00:00.00Z (not notif)
=====================================================================
HTTP/1.1 201 Created
Content-Length: 0
Location: /v2/entities/E1?type=T
Date: REGEX(.*)



03. Update entity to birthdaty: 2016-02-24T10:00:00.00Z (notif)
===============================================================
HTTP/1.1 204 No Content
Content-Length: 0
Date: REGEX(.*)



04. Update entity to birthdaty: 2016-02-25T10:00:00.00Z (notif)
===============================================================
