# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
POST Subscriptions V2 q expression (equal quoted enum)

--SHELL-INIT--
dbInit CB
brokerStart CB
accumulatorStart

--SHELL--

#
# 01. Create subscription with q: colour!='black,white','red,green'
# 02. Create entity with colour=black (not notif)
# 03. Update entity to colour=red,green (notif)
# 04. Update entity to colour=red (not notif)
# 05. Update entity to colour=black,white (notif)
# 06. Dump accumulator (2 notifications)
#

echo "01. Create subscription with q: colour!=black,white"
echo "==================================================="
payload='
{
    "subject": {
        "entities": [
            {
                "id": "E1",
                "type": "T"
            }
        ],
        "condition": {
            "attributes": [ ],
            "expression": {
               "q": "colour!='black,white','red,green'"
            }
         }
    },
    "notification": {
        "callback": "http://localhost:'$LISTENER_PORT'/notify",
        "attributes": [ ]
    },
    "expires": "2050-04-05T14:00:00.00Z"
}
'
orionCurl --url /v2/subscriptions --payload "$payload" --json
echo
echo


echo "02. Create entity with colour=black (not notif)"
echo "==============================================="
payload='{
  "id": "E1",
  "type": "T",
  "colour": "black"
}'
orionCurl --url '/v2/entities?options=keyValues' --payload "$payload" --json
echo
echo


echo "03. Update entity to colour=red,green (notif)"
echo "============================================="
payload='{
  "colour": "red,green"
}'
orionCurl --url '/v2/entities/E1?options=keyValues' --payload "$payload" --json -X PATCH
echo
echo


echo "04. Update entity to colour=red (not notif)"
echo "==========================================="
payload='{
  "colour": "red"
}'
orionCurl --url '/v2/entities/E1?options=keyValues' --payload "$payload" --json -X PATCH
echo
echo


echo "05. Update entity to colour=black,white (notif)"
echo "============================================="
payload='{
  "colour": "black,white"
}'
orionCurl --url '/v2/entities/E1?options=keyValues' --payload "$payload" --json -X PATCH
echo
echo


echo "06. Get accumulator dump (2 notifications)"
echo "=========================================="
accumulatorDump
echo
echo


