# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
broker version via REST

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--
# Note that we are assuming a fixed value of 0 for days, hours and minutes, assuming that this test
# is executed in less than one minute
echo "1: +++++++++++++++++++++++++++++"
orionCurl --url "/version"


echo "2: +++++++++++++++++++++++++++++"
orionCurl --url "/version" --json

--REGEXPECT--
1: +++++++++++++++++++++++++++++
HTTP/1.1 200 OK
Content-Length: REGEX(\d+)
Content-Type: application/xml
Date: REGEX(.*)

<?xml version="1.0"?>
<orion>
  <version>REGEX(.*)</version>
  <uptime>REGEX(.*)</uptime>
  <git_hash>REGEX(([0-9a-f]{40}|nogitversion))</git_hash>
  <compile_time>REGEX(.*)</compile_time>
  <compiled_by>REGEX(.*)</compiled_by>
  <compiled_in>REGEX(.*)</compiled_in>
</orion>
2: +++++++++++++++++++++++++++++
HTTP/1.1 200 OK
Content-Length: REGEX(\d+)
Content-Type: application/json
Date: REGEX(.*)

{
    "orion": {
        "compile_time": "REGEX(.*)",
        "compiled_by": "REGEX(.*)",
        "compiled_in": "REGEX(.*)",
        "git_hash": "REGEX(([0-9a-f]{40}|nogitversion))",
        "uptime": "REGEX(.*)",
        "version": "REGEX(.*)"
    }
}
--TEARDOWN--
brokerStop CB
dbDrop CB
