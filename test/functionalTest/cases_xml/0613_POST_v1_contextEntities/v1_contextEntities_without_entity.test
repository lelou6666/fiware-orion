#


echo "01. POST /v1/contextEntities without entityId in JSON payload and see it fail"
echo "============================================================================="
payload='{
    "attributes": [
        {    
            "name": "A1",
            "type": "A1T",
            "value": "10"
        }
    ]
}'
orionCurl --url /v1/contextEntities --payload "${payload}"  --json
echo
echo


echo "02. POST /v1/contextEntities/EID with entityId:id=EID2 in JSON payload and see it fail"
echo "======================================================================================"
payload='{
    "id": "EID2",
    "type": "ET",
    "isPattern": "false",
    "attributes": [
        {    
            "name": "A1",
            "type": "A1T",
            "value": "10"
        }
    ]
}'
orionCurl --url /v1/contextEntities/EID --payload "${payload}" --json
echo
echo


