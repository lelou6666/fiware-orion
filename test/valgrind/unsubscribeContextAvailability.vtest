#
# Create a subscription
#
echo Register an entity
../manual/cbTest.sh rcr ../manual/ngsi9.registerContextRequest.ok.valid.xml > /dev/null 2>&1

echo Create an availability subscription
../manual/cbTest.sh dcar ../manual/subscribeContextAvailability.xml > ${NAME}.cbTest.out 2>&1

subIdLine=$(grep '</subscriptionId>' ${NAME}.cbTest.out)
subId=$(echo $subIdLine | awk -F '>' '{ print $2}' | awk -F '<' '{ print $1}')

echo Unsubscribe from $subId and then make the broker exit
../manual/cbTest.sh ucas ../manual/ngsi9.updateContextAvailabilitySubscriptionRequest.SUBSCRIPTIONID.invalid.xml -id $subId >> ${NAME}.cbTest.out 2>&1
